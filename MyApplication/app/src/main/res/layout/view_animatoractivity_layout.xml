<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/datausage_img_connect_manage_icon"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/vertical"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="View Anim"
        android:onClick="viewAnim"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="PropertyValuesHolder"
        android:onClick="propertyValuesHolder"
        android:layout_alignBottom="@id/vertical"
        android:layout_toRightOf="@id/vertical"/>

</RelativeLayout>
